<%= form_with model: film do |f| %>
    <div>
        <%=f.label 'Título' %>
        <%=f.text_field :title %>
    </div>
    <div>
        <%=f.label 'Ano de lançamento' %>
        <%=f.number_field :release_year %>
    </div>
    <div>
        <%=f.label 'Sinopse' %>
        <%=f.text_field :synopsis %>
    </div>
    <div>
        <%=f.label 'País de origem' %>
        <%=f.text_field :origin_country %>
    </div>
    <div>
        <%=f.label 'Duração' %>
        <%=f.number_field :duration %>
    </div>
    <div>
        <%=f.label 'Diretor' %>
        <%=f.collection_select :director_id, Director.all, :id, :name %>
    </div>
    <div>
        <%=f.label 'Gênero' %>
        <%=f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div>
        <%=f.submit 'Salvar'%>
    </div>
<% end %>